{% extends 'menu.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container" >
        <div class="row" >

            <div class="card ">
                <div class="card-header">
                    <span class="h2">Liste des utilisateurs</span>
                    <span>
                    <button type="button" class="btn btn-primary offset-7" data-toggle="modal" data-target="#exampleModal">
                        Ajouter
                    </button>
                </span>
                </div>

                <div class="card-body">
                    <table class="table table-striped border">
                        <tr>
                            <th>#</th>
                            <th>Pr√©nom</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                        {% for l in listeUser %}
                            <tr>
                                <td>{{ l.id }}</td>
                                <td>{{ l.prenom }}</td>
                                <td>{{ l.nom }}</td>
                                <td>{{ l.email }}</td>
                                <td>
                                    {% for r in l.roles %}
                                        {{ r }}
                                    {% endfor %}
                                </td>
                                <td><a href="#"><i class="fa fa-edit btn btn-warning"></i></a> </td>
                                <td> <i class="fa fa-trash btn btn-danger"></i> </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>

                <div class="card-footer">

                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ajouter un produit</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ form(form) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
